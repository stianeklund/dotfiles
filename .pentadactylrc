"hg7166

loadplugins '\.(js|penta)$'
group user
set cdpath=''
set guioptions+=CrsT

" set duckduckgo.com as default search engine
set defsearch='duckduckgo'

" colorcheme gruvebox
colorscheme gruvbox-dark

" smooth scroll setting
set scroll=7
set scrollsteps=20
set scrolltime=200

"make j and k move faster
map -modes=n,v n -builtin 5j
map -modes=n,v e -builtin 5k

" leader
map <Leader>f f

" colemak
noremap h <Nop>
noremap H <Nop>
noremap n j
noremap e k
noremap s h
noremap t l
" noremap f e
noremap k n
noremap K N

" set hintkeys to colemak homerow
set hintkeys=arstneio
set titlestring="Firefox ‚ù§  Vim"
